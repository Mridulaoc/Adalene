<!DOCTYPE html>
<html lang="en">
<%- include ("../layout/header.ejs") %>

<body>
    <%- include ("../layout/navbar.ejs") %>

    <div class="container-fluid px-0 mx-auto">     
        <div class="d-flex justify-content-center align-items-center  ">        
            <div class="hero d-flex flex-column py-5">
                <h1 class="text-center">CUE THE COLOR</h1>
                <div class="my-5 ">
                  <a href="/shopall" class="text-decoration-none z-index-2"><button class=" heroBtn bg-transparent fs-5 " style="border-color:white; color: white;" >Shop The Collection</button></a>
                </div>
                <div class="overlay"></div>
            </div>
            
          </div>
        <div class="container my-5 mx-auto d-flex flex-column justify-content-center align-items-center">
            <h2 class="text-center" style="color:#BC4C2A">POPULAR PRODUCTS</h2>

            <!-- Carousel for Small and Medium Screens -->
<!-- Carousel for Small and Medium Screens -->
<div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <% if(products.length > 0) { 
            for (let i = 0; i < products.length; i++) { 
                const isActive = i === 0 ? 'active' : ''; %>
                <div class="carousel-item <%= isActive %>">
                    <div class="d-flex justify-content-center">
                        <div class="d-md-flex">
                            <!-- First Product -->
                            <div class="mx-2 d-lg-none">
                                <a href="/products/<%= products[i]._id %>" class="text-decoration-none">
                                    <div class="card shadow" style="width: 18rem;">
                                        <img src="/uploads/<%= products[i].prod_images[0] %>" class="card-img-top" alt="<%= products[i].prod_name %>">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <p class="fs-6"><%= products[i].prod_name %></p>
                                            <% if (products[i].appliedDiscount > 0) { %>
                                                <p class="card-text fs-5">
                                                    <span style="text-decoration: line-through;">₹<%= products[i].prod_price %></span>
                                                    ₹<%= products[i].discountedPrice %>
                                                    <span class="text-success">(<%= products[i].appliedDiscount %>% off)</span>
                                                </p>
                                            <% } else { %> 
                                                <p class="card-text fs-5">₹<%= products[i].prod_price %></p>
                                            <% } %>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <!-- Second Product (Only for Medium Screens and Up) -->
                            <% if (i + 1 < products.length) { 
                                i++; %>
                                <div class="mx-2 d-none d-md-block d-lg-none">
                                    <a href="/products/<%= products[i]._id %>" class="text-decoration-none">
                                        <div class="card shadow" style="width: 18rem;">
                                            <img src="/uploads/<%= products[i].prod_images[0] %>" class="card-img-top" alt="<%= products[i].prod_name %>">
                                            <div class="card-body d-flex flex-column align-items-center">
                                                <p class="fs-6"><%= products[i].prod_name %></p>
                                                <% if (products[i].appliedDiscount > 0) { %>
                                                    <p class="card-text fs-5">
                                                        <span style="text-decoration: line-through;">₹<%= products[i].prod_price %></span>
                                                        ₹<%= products[i].discountedPrice %>
                                                        <span class="text-success">(<%= products[i].appliedDiscount %>% off)</span>
                                                    </p>
                                                <% } else { %>
                                                    <p class="card-text fs-5">₹<%= products[i].prod_price %></p>
                                                <% } %>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } 
        } else { %>
            <p>No popular products found.</p>
        <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


            <!-- Grid for Large Screens -->
            <div class="d-none d-lg-flex justify-content-between my-5 gap-5 mx-auto">
                <% if(products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <a href="/products/<%= product._id %>" class="text-decoration-none">
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3 ">
                                <div class="card shadow" style="width: 18rem;">
                                    <img src="/uploads/<%= product.prod_images[0] %>" class="card-img-top" alt="<%= product.prod_name %>">
                                    <div class="card-body d-flex flex-column align-items-center">
                                        <p class="fs-6"><%= product.prod_name %></p>
                                        <% if (product.appliedDiscount > 0) { %>
                                            <p class="card-text fs-5">
                                                <span style="text-decoration: line-through;">₹<%= product.prod_price %></span>
                                                ₹<%= product.discountedPrice %>
                                                <span class="text-success">(<%= product.appliedDiscount %>% off)</span>
                                            </p>
                                        <% } else { %>
                                            <p class="card-text fs-5">₹<%= product.prod_price %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                <% } else { %>
                    <p>No popular products found.</p>
                <% } %>
            </div>

            <div class="my-5">
              <a href="/shopall?category=Bags" class="text-decoration-none"><button class=" shopallbtn bg-transparent fs-5" >SHOP ALL BAGS</button></a>
            </div>
        </div>
   
        <div class="py-5 " style="width: 100%;">
            <div class="row g-0">
                <div class="col-md-6 d-flex align-items-center " style="background-color: #f8f4f0;">
                  <img src="/uploads/wallet1.webp" alt="" style="width: 100%;vertical-align: center;">
                </div>
                <div class="col-md-6 wallet d-flex justify-content-center align-items-center" style="position: relative;" >
                    <img src="/uploads/wallet2.webp" alt="" style="width: 100%;vertical-align: center;">
                    <h2 style="position: absolute;"><a href="/shopall?category=Wallets" style="color: white;z-index:2;letter-spacing:.5em;">MINI LEATHER GOODS</a></h2>
                    <div class="overlay"></div>
                </div>
            </div>
            <div class="row g-0">
                <div class="col-md-6 d-flex justify-content-center align-items-center "  style="position: relative;" >
                  <img src="/uploads/belt1.webp" alt="" style="width: 100%;">
                  <h2 style="position: absolute;"><a href="/shopall?category=Wallets" style="color: white;z-index:100;letter-spacing:.5em;"> LEATHER BELTS</a></h2>
                    <div class="overlay"></div>
                </div>
                <div class="col-md-6 d-flex align-items-center " style="background-color: #f8f4f0;">
                    <img src="/uploads/belt2.webp" alt="" style="width: 100%;">
                </div>
            </div>
            </div>
        </div>
    <%- include ("../layout/footerUser.ejs") %>
</div>
    

    <!-- Bootstrap JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
