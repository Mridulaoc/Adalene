<!DOCTYPE html>
<html lang="en">
<%- include ("../layout/header.ejs") %>
<body>
<%- include ("../layout/navBarnew.ejs") %>
<div class="conatiner-fluid">
    <div class="container " style="margin-top: 5rem;">
        <p><a href="/" class="text-decoration-none text-black">Home</a>><%= products[0].prod_category.cat_name %></p>
        <div class="container my-5">
            <div class="row align-items-start">
              <div class="col-4">
                <p>Filter By</p>
                <hr style="width: 60%;">
                <p>Price</p>
                <p>Model</p>
                <p>Size</p>
              </div>
              <div class="col-8 d-flex flex-column align-items-center">
                <div class="d-flex flex-wrap my-5 mx-5 gap-5">
                    <%if(products.length > 0){
                        for(let i=0; i<products.length; i++){ 
                            
                        %>
                    
                    <a href="/products/?id=<%= products[i]._id %>" class="text-decoration-none"><div class="card shadow d-flex flex-column align-items-center" style="width: 22rem;">
                        <img src="\uploads\<%= products[i].prod_images[0] %>" class="card-img-top px-2 py-2" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= products[i].prod_name %></h5>
                          <p class="card-text fs-5"><i class="fa-solid fa-indian-rupee-sign"></i><%= products[i].prod_price %></p>
                         
                        </div>
                    </div>
                </a>
                      <%}%>
                                <%}else{%>
                    
                                    Data not found
                            
                                <%}%>               
                    </div>
                    <div class="d-flex flex-column gap-3">
                      <div class="d-flex gap-3">
                        <% if (currentPage > 1) { %>
                        <a href="/bags/?page=<%= currentPage - 1 %>" class="text-decoration-none fw-bold fs-5 button rounded"> Prev</a>
                        <% } %>
                        <div class="d-flex gap-3 ">
                        <% for (i = 1; i <= totalPages; i++ ){ %>
                        <a href="/bags/?page=<%= i %>" class="text-decoration-none fw-bold fs-5 button rounded" ><%= i %></a>                    
                        <%}%>
                      </div>
                        <% if (currentPage < totalPages) { %>
                        <a href="/bags/?page=<%= Number(currentPage) + 1 %>" class="text-decoration-none fw-bold fs-5 button rounded">Next</a>
                        <% } %>
                        </div>   
                         
                      </div>
              </div>              
            </div>
    </div>
</div>
</body>
</html>